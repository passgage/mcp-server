# Global MCP Server Configuration
# Copy this file to .env and configure for Cloudflare Workers deployment

# Deployment Mode (auto-detected, but you can force it)
MCP_DEPLOYMENT_MODE=global

# Authentication - Choose ONE method:
# Option 1: Default (users authenticate individually)
# No default credentials needed - users provide their own

# Option 2: Company API Key (for admin/fallback access)
# PASSGAGE_API_KEY=your_company_api_key_here

# API Configuration
PASSGAGE_BASE_URL=https://api.passgage.com
PASSGAGE_TIMEOUT=30000
PASSGAGE_DEBUG=false

# Transport (auto-set to 'http' for global mode)
TRANSPORT_TYPE=http

# HTTP Transport Configuration
HTTP_PORT=3000
HTTP_HOST=0.0.0.0
HTTP_PATH=/mcp
HTTP_CORS=true

# Global Mode - Security & Rate Limiting
MCP_SECURITY_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Global Mode - Session Management
MCP_GLOBAL_SESSION_STORAGE=kv
SESSION_TIMEOUT_HOURS=8
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
NODE_ENV=production

# Cloudflare Workers Configuration
# These are automatically set by Cloudflare Workers
# CF_PAGES=1
# CLOUDFLARE_WORKER=true

# Notes:
# - Global mode uses HTTP transport for web-based access
# - Session management with KV storage for multi-user isolation
# - Individual user authentication per session
# - Rate limiting and security features enabled
# - Suitable for shared deployment serving multiple users