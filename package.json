{
  "name": "passgage-mcp-server",
  "version": "1.1.2",
  "description": "Model Context Protocol (MCP) server for Passgage Public API integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "passgage",
    "api",
    "server",
    "claude",
    "ai",
    "workforce",
    "hr",
    "time-tracking",
    "leave-management"
  ],
  "author": "Gokhan Almas",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^22.7.8",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/passgage/mcp-server.git"
  },
  "homepage": "https://github.com/passgage/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/passgage/mcp-server/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "server.json",
    "CHANGELOG.md"
  ],
  "bin": {
    "passgage-mcp-server": "./dist/index.js"
  }
}
