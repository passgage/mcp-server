{
  "name": "passgage-mcp-server",
  "version": "1.2.0",
  "description": "Model Context Protocol (MCP) server for Passgage Public API integration",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx scripts/dev.ts",
    "dev:old": "tsx src/index.ts",
    "dev:main": "tsx src/main.ts",
    "start": "node dist/main.js",
    "start:old": "node dist/index.js",
    "start:local": "MCP_DEPLOYMENT_MODE=local node dist/main.js",
    "start:global": "MCP_DEPLOYMENT_MODE=global node dist/main.js",
    "dev:local": "MCP_DEPLOYMENT_MODE=local tsx src/main.ts",
    "dev:global": "MCP_DEPLOYMENT_MODE=global tsx src/main.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:local": "MCP_DEPLOYMENT_MODE=local npm test",
    "test:global": "MCP_DEPLOYMENT_MODE=global npm test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "create-tool": "tsx scripts/create-tool.ts",
    "deploy:cloudflare": "npm run build && wrangler deploy",
    "deploy:cloudflare:dev": "npm run build && wrangler deploy --env development",
    "deploy:cloudflare:staging": "npm run build && wrangler deploy --env staging",
    "deploy:cloudflare:prod": "npm run build && wrangler deploy --env production",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "passgage",
    "api",
    "server",
    "claude",
    "ai",
    "workforce",
    "hr",
    "time-tracking",
    "leave-management"
  ],
  "author": "Gokhan Almas",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "pino": "^9.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250903.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^22.7.8",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "pino-pretty": "^11.0.0",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/passgage/mcp-server.git"
  },
  "homepage": "https://github.com/passgage/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/passgage/mcp-server/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "server.json",
    "CHANGELOG.md",
    "wrangler.toml",
    "CLOUDFLARE_DEPLOYMENT.md",
    "USER_CONNECTION_GUIDE.md",
    ".env.local.example",
    ".env.global.example"
  ],
  "bin": {
    "passgage-mcp-server": "./dist/main.js"
  },
  "preferGlobal": true
}
